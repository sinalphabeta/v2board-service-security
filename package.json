{
  "name": "airbuddy-security",
  "type": "module",
  "version": "1.1.1",
  "private": true,
  "packageManager": "yarn@1.22.22",
  "module": "./dist/index.js",
  "scripts": {
    "dev": "bun run --watch ./dev.ts",
    "start": "bun run ./dist/index.js",
    "build:bun": "bun build ./src/index.ts --target=bun --outdir dist",
    "build:node": "bun build ./src/index.ts --target=node --outdir dist",
    "build:executable": "bun build ./src/index.ts --compile --minify --sourcemap --target=bun-linux-x64-modern --outfile dist/airbuddy-security-executable --static"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.9.2",
    "@koa/bodyparser": "^5.1.1",
    "@koa/cors": "^5.0.0",
    "@koa/router": "^13.1.0",
    "@types/bun": "latest",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/koa": "^2.15.0",
    "@types/koa__cors": "^5.0.0",
    "@types/koa__router": "^12.0.4",
    "@types/node": "^20.0",
    "@types/nodemailer": "^6.4.17",
    "captchapng": "^0.0.1",
    "chalk": "^5.4.1",
    "dotenv": "^16.5.0",
    "eslint": "^9.15.0",
    "eslint-plugin-format": "^0.1.2",
    "husky": "^9.1.7",
    "is-ci": "^3.0.1",
    "jsonwebtoken": "^9.0.2",
    "koa": "^3.0.0",
    "lint-staged": "^15.2.0",
    "nodemailer": "^7.0.3",
    "typescript": "^5.7.2"
  }
}
